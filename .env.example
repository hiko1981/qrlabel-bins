# Session signing secret (generate a long random string)
SESSION_SECRET="CHANGE_ME_TO_A_LONG_RANDOM_SECRET"

# Protects admin issuance endpoints
ADMIN_API_KEY="CHANGE_ME"

# OTP delivery (Claim via email/SMS)
# Email (Resend)
